<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/receivedQuestionText"
        style="@style/MessageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="" />

    <EditText
        android:id="@+id/answerText"
        style="@style/MessageEditText"
        android:layout_below="@id/receivedQuestionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/sendAnswerButton"
        style="@style/SendButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_below="@id/answerText"
        android:onClick="onClick_SendAnswer"
        android:text="@string/sendButtonText" />
</RelativeLayout>
