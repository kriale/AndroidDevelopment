<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SendButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSendButtonText</item>
    </style>
    <style name="MessageEditText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorMessageEditText</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="MessageTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorMessageTextView</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
